{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {"*": ["node_modules/*"]},
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*", "*.ts"]
}
